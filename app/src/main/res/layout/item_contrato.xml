<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_grey_100"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/contrato"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/nome_display"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:fontFamily="@font/gill_sans_mt"
            android:id="@+id/nome_servicos"/>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/tempo_servico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/tempo_servico"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/data_horario_servico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/data_horario_servico"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/horario_final"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/horario_final"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/valor_total_pago"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/valor_total"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_troco"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/troco_para"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/valor_troco"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/pagamento"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/pagamento"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/numeros_servico"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/numeros_servico"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_observacao"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/observacao_point"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/ver_obs"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/Ver"/>
                <View
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="1dp"
                    android:background="@color/preto"
                    android:layout_height="20dp"/>
                <Button
                    android:id="@+id/editar_obs"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="@string/editar"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:alpha="0.6"
                android:textSize="16sp"
                android:text="@string/endereco_point"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/endereco"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:text="@string/situa_o"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/acriligo_tint_laranja"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:textSize="16sp"
                android:id="@+id/situacao"
                android:background="@drawable/btn_acriligo_laranja"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/call_option"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/acriligo_tint_laranja"
                android:src="@drawable/ic_action_telefone"
                android:background="@drawable/btn_acriligo_laranja_circular"/>
            <ImageButton
                android:id="@+id/zap_option"
                android:layout_width="40dp"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                app:tint="@color/acriligo_tint_verde"
                android:src="@drawable/ic_action_zap"
                android:background="@drawable/btn_acriligo_verde_circular"/>
            <TextView
                android:id="@+id/pendente_analise"
                android:visibility="gone"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:fontFamily="@font/gill_sans_mt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/agendamento_em_analise"/>
            <Button
                android:visibility="gone"
                android:id="@+id/menu_options"
                android:background="@drawable/btn_acriligo_vermelho"
                android:textAllCaps="false"
                android:textColor="@color/acriligo_tint_vermelho"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/menu_op_es"/>
            <Button
                android:visibility="gone"
                android:id="@+id/btn_ver_msg_cancelamento_pedido"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/bg_button_home"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/motivo_cancelamento"/>

        </LinearLayout>
        <Button
            android:id="@+id/comfirmar_cancelamento"
            android:visibility="gone"
            android:background="@drawable/btn_acriligo_vermelho"
            android:textAllCaps="false"
            android:textColor="@color/acriligo_tint_vermelho"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="40dp"
            android:text="@string/confirmar_cancelamento"/>
        <LinearLayout
            android:id="@+id/layout_alteracao_agenda"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textAlignment="center"
                android:fontFamily="@font/gotham"
                android:id="@+id/novo_agendamento"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/gotham"
                android:text="@string/aceita_ou_rejeita_a_altera_o_do_agendamento"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/rejeitar_alteracao"
                    android:background="@drawable/btn_acriligo_laranja"
                    android:textAllCaps="false"
                    android:textColor="@color/acriligo_tint_laranja"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:text="@string/rejeitar_alteracao"/>
                <Button
                    android:id="@+id/aceitar_alteracao"
                    android:background="@drawable/btn_acriligo_verde"
                    android:textAllCaps="false"
                    android:textColor="@color/acriligo_tint_verde"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:text="@string/aceitar_alteracao"/>
            </LinearLayout>
            <Button
                android:id="@+id/contra_proposta"
                style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:textAllCaps="false"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="40dp"
                android:text="@string/contra_proposta"/>
        </LinearLayout>
    </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="40dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:alpha="0.6"
            android:background="@color/preto"/>
        <View
            android:layout_width="0dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:alpha="0.6"
            android:layout_height="2dp"
            android:background="@color/preto"/>
    </LinearLayout>

</LinearLayout>